<Page x:Class="WPF_test_July22.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_test_July22"
      mc:Ignorable="d" 
      d:DesignHeight="562" d:DesignWidth="392"
      Title="SearchPage" >

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89"/>
            <ColumnDefinition Width="111"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,11,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Width="59" FontSize="20"/>

        <TextBlock HorizontalAlignment="Left" Height="30" Margin="80,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20" Text="{Binding Name}" Grid.ColumnSpan="2"/>

        <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,11,0,0" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top" Width="35" FontSize="20" Grid.Column="2"/>

        <TextBlock Grid.Column="3" HorizontalAlignment="Left" Height="30" Margin="21,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" FontSize="20" Text="{Binding Asset_id}"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" Text="Price in USD:" VerticalAlignment="Top" Width="116" FontSize="20" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" Text="Price change in 24h:" VerticalAlignment="Top" Width="180" FontSize="20" Grid.ColumnSpan="2" Grid.Row="2" RenderTransformOrigin="0.586,2.267"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" Text="Volume:" VerticalAlignment="Top" Width="163" FontSize="20" Grid.Row="3" Grid.ColumnSpan="2"/>
        
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" FontSize="20" Text="{Binding Price}" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" FontSize="20" Text="{Binding Change_24h}" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" FontSize="20" Text="{Binding Volume_24h}" Grid.Row="3" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
